@model List<ClothBazar.Entities.Product>
@{
    ViewBag.Title = "ProductTable";
}

<div>
    <form method="post">
        <input id="searchTxt" name="Search" />
        <button type="submit" id="searchBtn">Search</button>
    </form>

    <button type="submit" id="newBtn">New</button>
</div>
<div id="TableContainer">
    <table>
        <thead>
            <tr>
                <td>Product Name</td>
                <td>Category</td>
                <td>Price</td>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var Product in Model)
            {
                <tr>
                    <td>@Product.Name</td>
                    <td>_@*@Product.Category.Name*@</td>
                    <td>@Product.Price</td>
                    <td>
                        <button class="EditBtn" data-id="@Product.ID">Edit</button>
                        <button class="DeleteBtn" data-id="@Product.ID" >Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div id="actionContainer">

</div>
<script>
    $("#searchBtn").click(function () {
        var SearchValue = $("#searchTxt").val();

        $.ajax({
            url: '/Product/ProductTable',
            data: {
                search: SearchValue
            }
        }).done(function (response) {
            $("#tableContainer").html(response);
        }).fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("Fail");
        });
    });
    $("#newBtn").click(function () {
        $.ajax({
            type: "GET",
            url: '/Product/Create'
        }).done(function (response) {
            $("#actionContainer").html(response);
        }).fail(function (XMLHttpRequest, textStatus, errorThrown) {
            alert("Fail");
        });
    });
    $(".EditBtn").click(function () {
        $.ajax(
            {
                type:"GET",
                url: '@Url.Action("Edit","Product")',
                data: {
                    ID: $(this).attr('data-id')
                },
                success: function (response) {
                    $("#actionContainer").html(response)
                },
                fail: function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("Fail")
                }
            
            });
    });
    $(".DeleteBtn").click(function () {
        var ConfirmDelete = confirm("Are you want to delete this product ?")
        if (ConfirmDelete) {
            $.ajax(
                {
                    type: 'POST',
                    url: '/Product/Delete',
                    data: {
                        ID: $(this).attr('data-id')
                    }
                }).done(function (response) {
                    $("#TableContainer").html(response);
                    location.reload();
                }).fail(Function(function (XMLHttpRequest, testStatus, errorthrown) {
                    alert("Fail");
                }));
        }
    });
</script>
